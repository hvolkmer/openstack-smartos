<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">
<service_bundle type="manifest" name="glance">
    <service name="application/openstack/glance-api" type="service" version="1">
        <create_default_instance enabled="false"/>

        <single_instance/>

        <dependency name="network" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/milestone/network:default"/>
        </dependency>

        <dependency name="filesystem" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/system/filesystem/local"/>
        </dependency>

        <method_context>

        </method_context>

        <exec_method type="method" name="start" exec="/openstack/glance/bin/glance-api --config-file=/openstack/cfg/glance-api.conf" timeout_seconds="60">

              <method_context working_directory='/openstack/'>
                <method_environment>
                  <envvar name="PATH" value="/usr/bin:/usr/sbin:/smartdc/bin:/opt/local/bin:/opt/local/sbin"/>
               </method_environment>
              </method_context>

                </exec_method>
        <exec_method type="method" name="stop" exec=":kill" timeout_seconds="60"/>

        <property_group name="startd" type="framework">
            <propval name="duration" type="astring" value="child"/>
            <propval name="ignore_error" type="astring" value="core,signal"/>
        </property_group>

        <property_group name="application" type="application">
        </property_group>

        <stability value="Evolving"/>
        <template>
            <common_name>
                <loctext xml:lang="C">
                    Openstack Keystone
                </loctext>
            </common_name>
        </template>

    </service>


<service name="application/openstack/glance-registry" type="service" version="1">
        <create_default_instance enabled="false"/>

        <single_instance/>

        <dependency name="network" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/milestone/network:default"/>
        </dependency>

        <dependency name="filesystem" grouping="require_all" restart_on="error" type="service">
            <service_fmri value="svc:/system/filesystem/local"/>
        </dependency>

        <method_context>

        </method_context>

        <exec_method type="method" name="start" exec="/openstack/glance/bin/glance-registry --config-file=/openstack/cfg/glance-registry.conf" timeout_seconds="60">

              <method_context working_directory='/openstack/'>
                <method_environment>
                  <envvar name="PATH" value="/usr/bin:/usr/sbin:/smartdc/bin:/opt/local/bin:/opt/local/sbin"/>
                </method_environment>
              </method_context>

                </exec_method>
        <exec_method type="method" name="stop" exec=":kill" timeout_seconds="60"/>

        <property_group name="startd" type="framework">
            <propval name="duration" type="astring" value="child"/>
            <propval name="ignore_error" type="astring" value="core,signal"/>
        </property_group>

        <property_group name="application" type="application">
        </property_group>

        <stability value="Evolving"/>
        <template>
            <common_name>
                <loctext xml:lang="C">
                    Openstack Keystone
                </loctext>
            </common_name>
        </template>

    </service>

</service_bundle>
